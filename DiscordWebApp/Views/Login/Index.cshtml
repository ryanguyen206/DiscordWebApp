
@{
    ViewData["Title"] = "Index";
}

@model LoginUser

<div class="full_container d-flex justify-content-center align-items-center">
      
    <form class="d-flex justify-content-center align-items-center p-4 loginForm" asp-action="Post" method="post">
        <div class="form-row left_side">
            <div class="form-grou justify-content-center align-items-center flex-direction-column">
                <p class="fw-bold text-center">Welcome Back!</p>
                <p class="fw-light form_text_lightgrey">We're so excited to see you again!</p>
            </div>
     
    
            <div class="form-group mb-2">
                  <label class="form_text_lightgrey fw-bold mb-2" asp-for="Email"></label>
                <input asp-for="@Model.Email" type="text" class="form-control bg-dark border-dark" id="formGroupExampleInput" placeholder="Example input">
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label  class="form_text_lightgrey fw-bold mb-2" asp-for="Password"></label>
                    <input asp-for="@Model.Password" type="text" class="form-control bg-dark border-dark" id="formGroupExampleInput" placeholder="Example input">
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
             </div>
            <button class="col-md-12 mt-2 loginBtn b-0" type="submit">Log in</button>
        </div>

         <div class="form-row qr_side">
            <p>Login with the QR Code</p>
            <p>Scan this app to login instantly</p>
        </div>


       </form>
</div>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
